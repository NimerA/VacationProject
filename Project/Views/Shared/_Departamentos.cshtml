@model Project.ServiceReference.tbl_departamento
<!--Start Breadcrumb-->
<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li><a href="index">Home</a></li>
            <li><a href="#">Departamentos</a></li>
        </ol>
    </div>
</div>
<!--End Breadcrumb-->
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-plus-circle"></i>
                    <span>Agregar Departamento</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>  
            <div class="box-content">
                <form class="form-horizontal" role="form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Id del Rol</label>
                        <div class="col-sm-4">
                            <input type="number" name="departamentoid" class="form-control" placeholder="Escriba id del Rol" data-toggle="tooltip" data-placement="bottom">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Seleccione Estatus</label>
                        <div class="col-sm-4">
                            <select id="s2_with_tag" name="activo" class="populate placeholder">
                                <option value="true">Activo</option>
                                <option value="false">Descativado</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="form-styles">Descripcion</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="descripcion" rows="5" id="wysiwig_simple"></textarea>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-2">
                            <button type="submit" value="Add" name="submitButton" class="btn btn-primary btn-label-left">
                                <span><i class="fa fa-clock-o"></i></span>
                                Agregar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>@Html.Action("_Departamentos_Table")</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name hass-error">
                    <i class="fa fa-exclamation"></i>
                    <span>Elimina Departamento</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Id</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" placeholder="Departamento a Borrar" data-toggle="tooltip" data-placement="bottom">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-2">
                            <button type="submit" class="btn btn-danger btn-label-left">
                                <span><i class="fa fa-clock-o"></i></span>
                                Borrar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
// Run Datables plugin and create 3 variants of settings
function AllTables(){
    TestTable2();
	LoadSelect2Script(MakeSelect2);
}
function MakeSelect2(){
	$('select').select2();
	$('.dataTables_filter').each(function(){
		$(this).find('label input[type=text]').attr('placeholder', 'Search');
	});
}
$(document).ready(function () {
	// Load Datatables and run plugin on tables
	LoadDataTablesScripts(AllTables);
	// Add Drag-n-Drop feature
	WinMove();
});
</script>
