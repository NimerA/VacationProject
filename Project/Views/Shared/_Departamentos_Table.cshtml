@model IEnumerable<Project.ServiceReference.tbl_departamento>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-table"></i>
                    <span>Departamentos</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding table-responsive">
                <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-2">
                    <thead>
                        <tr>
                            <th><label><input type="text"  value="Departamento" class="search_init" /></label></th>
                            <th><label><input type="text"  value="Descripcion" class="search_init" /></label></th>
                            <th><label><input type="text"  value="Estatus" class="search_init" /></label></th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.departamentoid</th>
                                    <th>@item.descripcion</th>
                                    <th>@item.activo</th>
                                </tr>
                            }
                        }
                        catch (System.NullReferenceException)
                        {
                            <tr>
                                <th>Vacio</th>
                                <th>Vacio</th>
                                <th>Vacio</th>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Departamento</th>
                            <th>Descripcion</th>
                            <th>Estatus</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
